#include <stdio.h>

//#define é diretiva que define CONSTANTES
#define NUMERO_DE_TENTATIVAS 5 

int main() {
	printf("*****************************************\n");
	printf("* Bem vindo ao nosso jogo de advinhação *\n");
	printf("*****************************************\n");
	
	int numerosecreto = 42;
	int chute;
	
	for (int i = 1; i <= NUMERO_DE_TENTATIVAS; i++) {
		prinf("Tentativa %d de %d\n", i, NUMERO_DE_TENTATIVAS);
		prinf("Tentativa %d\n", tentativas+1);
		printf("Qual é o seu chute? ");

		scanf("%d", &chute);
		printf("Seu chute foi %d", chute);

		if(chute < 0) {
			printf("Você não pode chutar números negativos!\n");
			i--;

			continue;
		}

		int acertou = (chute == numerosecreto);
		int maior = chute > numerosecreto;
		
		if(acertou) {
			printf("Parabéns! você acerto!\n");
			printf("Jogue de novo, você é um bom jogador/!\n");

			break;
		}
		else if(maior){
				printf("Seu chute foi maior que o número secreto");
		}

		else (menor){
			 printf("Seu chute foi menor que o número secreto");
		}

	}
	printf("Fim de Jogo!\n");
 }


//Faça um programa que imprima todos os números de 1 a 100 usando o laço de repetição for.
#include <stdio.h>
#NUMERO_IMPRESSO 100

int main() {
	for (int i = 1; i <= NUMERO_IMPRESSO; i++) {
		printf("Os números de 1 a 100 são %d", NUMERO_IMPRESSO);
	}
}

//Faça um programa que imprima todos os números de 1 a 100 usando o laço de repetição while.
#include <stdio.h>
int main() {

	int numero =1;
	while (numero <= 100) {
		printf("%d", numero);
		numero++;
	}
}


/*Faça um programa que some todos os números de 1 a 100 (1+2+3+...+100).*/
#include <stdio.h>

int main() {
    int soma = 0;
    for(int i = 1; i <= 100; i++) {
        soma += i;
    }
    printf("A soma de 1 a 100 é %d\n", soma);
    return 0;
}
